<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_customer_details_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">بطاقة معلومات العميل</h2>
                        <div class="oe_structure"/>

                        <!-- صورة العميل -->
                        <div class="text-center mt-3 mb-4">
                            <img t-if="o.image_1920"
                                 t-att-src="image_data_uri(o.image_1920)"
                                 style="width:120px; height:120px; border-radius:8px; border:1px solid #ddd;"/>
                            <span t-if="not o.image_1920">لا توجد صورة متاحة</span>
                        </div>

                        <!-- جدول معلومات العميل -->
                        <table class="table table-sm table-borderless mt-4">
                            <tr>
                                <td style="width: 25%;"><strong>الاسم:</strong></td>
                                <td style="width: 75%;"><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>نوع العميل:</strong></td>
                                <td>
                                    <span t-if="o.company_type == 'company'">شركة</span>
                                    <span t-if="o.company_type == 'person'">فرد</span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>البريد الإلكتروني:</strong></td>
                                <td><span t-field="o.email"/></td>
                            </tr>
                            <tr>
                                <td><strong>الهاتف:</strong></td>
                                <td><span t-field="o.phone"/></td>
                            </tr>
                            <tr>
                                <td><strong>العنوان:</strong></td>
                                <td>
                                    <span t-field="o.street"/>
                                    <span t-field="o.street2" t-if="o.street2"/>
                                    <span t-field="o.city"/>,
                                    <span t-field="o.zip"/>
                                    <span t-field="o.country_id.name"/>
                                </td>
                            </tr>
                            <tr t-if="o.parent_id">
                                <td><strong>تابع لشركة:</strong></td>
                                <td><span t-field="o.parent_id.name"/></td>
                            </tr>
                        </table>

                        <!-- الفواتير الغير مدفوعة -->
                        <t t-set="unpaid_invoices" t-value="o.invoice_ids.filtered(lambda inv: inv.state=='posted' and inv.payment_state != 'paid')"/>
                        <t t-if="unpaid_invoices">
                            <h4 class="mt-4">الفواتير الغير مدفوعة</h4>
                            <table class="table table-sm table-bordered mt-2">
                                <thead>
                                    <tr>
                                        <th>رقم الفاتورة</th>
                                        <th>التاريخ</th>
                                        <th>المبلغ الإجمالي</th>
                                        <th>المتبقي</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="unpaid_invoices" t-as="inv">
                                        <td><span t-field="inv.name"/></td>
                                        <td><span t-field="inv.invoice_date"/></td>
                                        <td>
                                            <span t-field="inv.amount_total"
                                                  t-options='{"widget":"monetary","display_currency":inv.currency_id}'/>
                                        </td>
                                        <td>
                                            <span t-field="inv.amount_residual"
                                                  t-options='{"widget":"monetary","display_currency":inv.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-if="not unpaid_invoices">
                            <p class="mt-3"><strong>لا توجد فواتير غير مدفوعة لهذا العميل.</strong></p>
                        </t>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
